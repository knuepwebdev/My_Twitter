<h2 class='form_header'>Register</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class='form_row'>
  	<%= f.label :username %>
  	<%= f.text_field :username, class: 'login_field' %>
  </div>
  <div class='form_row'>
  	<%= f.label :email %>
  	<%= f.email_field :email, :autofocus => true, class: 'login_field email_textfield' %>
  </div>
  <div class='form_row'>
  	<%= f.label :password %>
  	<%= f.password_field :password, class: 'login_field password_field' %>
  </div>
  <div class='form_row'>
  	<%= f.label :password_confirmation %>
  	<%= f.password_field :password_confirmation, class: 'login_field' %>
  </div>
  <div class='form_row'>
  	<%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
